{% extends 'IEPCWebsiteBundle::base.html.twig' %}

{% block bodyClass 'participacion-ciudadana' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output='css/participacion-ciudadana.css' filter='?yui_css'
        '@IEPCWebsiteBundle/Resources/less/sections/participacion-ciudadana.less'
    %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock stylesheets %}

{% block layout %}
    <header>
        {% block header %}
            {% include '@IEPCWebsite/_shared/header-participacion-ciudadana.html.twig' %}
        {% endblock header %}
    </header>

    {% block mainMenu %}
        {{  render(controller('IEPCWebsiteBundle:Menu:participacionCiudadana')) }}
    {% endblock mainMenu %}

    {% block mainContainer %}
        <main class="container">
            <row end>
                <column cols="9">
                    {% block content '' %}
                </column>
                <column cols="3" class="hideMobile sidebar">
                    <p>Sidebar</p>
                </column>
            </row>
        </main>
    {% endblock mainContainer %}
{% endblock layout %}